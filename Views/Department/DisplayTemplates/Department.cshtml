@using Microsoft.Extensions.Options
@using Student
@model Student.Models.Department
@inject IOptions<ThreeOptions> options
    <tr>
        @if (Model.EmployeeCount > options.Value.BoldDepartmentEmployeeCountThreshold)
        {
            <td><strong>@Model.Name</strong></td>
        }
        else
        {
            <td>@Model.Name</td>
        }
        <td>@Model.location</td>
        <td>@Model.EmployeeCount</td>
        <td>
            <a asp-controller="Employee" asp-action="Index" asp-route-departmentId="@Model.Id">Employess</a>
        </td>
    </tr>